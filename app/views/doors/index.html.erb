<p id="notice"><%= notice %></p>

<h1>Listing Doors</h1>

<table>
  <thead>
    <tr>
      <th>Open</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doors.each do |door| %>
      <tr>
        <td><%= door.open %></td>
        <td><%= link_to 'Show', door %></td>
        <td><%= link_to 'Edit', edit_door_path(door) %></td>
        <td><%= link_to 'Destroy', door, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

